{
  "name": "@antonytm/mcp-sitecore-server",
  "version": "0.6.1",
  "description": "A Model Context Protocol server for Sitecore",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/index.js",
  "bin": {
    "@antonytm/mcp-sitecore-server": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector@0.9.0 dist/index.js",
    "start": "npm run build && node dist/app.js",
    "run": "npm run build && node dist/run.js",
    "test": "npm run build && vitest run"
  },
  "dependencies": {
    "@antonytm/clixml-parser": "latest",
    "@modelcontextprotocol/sdk": "^1.9.0",
    "graphql": "^16.10.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.1",
    "express": "^5.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3",
    "@modelcontextprotocol/inspector": "^0.11.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
